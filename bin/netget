#!/usr/bin/env node

import { spawn } from 'child_process';
import { dirname, join } from 'path';
import { fileURLToPath } from 'url';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

const netgetPath = join(__dirname, '..', 'src', 'netget.cli.ts');

// Forward CLI args so subcommands and options are preserved when using `npx netget ...`
const forwardArgs = process.argv.slice(2);
const childArgs = ['--import', 'tsx', '--no-warnings', netgetPath, ...forwardArgs];
const child = spawn('node', childArgs, {
    stdio: 'inherit',
    cwd: join(__dirname, '..')
});

child.on('exit', (code) => {
    process.exit(code);
});